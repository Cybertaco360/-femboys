{
  "name": "pad-electron",
  "version": "0.1.0",
  "private": true,
  "main": "dist/electron/main.js",
  "type": "commonjs",
  "scripts": {
    "dev:renderer": "vite",
    "dev:electron": "tsc -w --preserveWatchOutput",
    "dev": "tsc && ELECTRON_DEV=1 concurrently -k \"npm:dev:*\" \"wait-on http://localhost:5173 && electron .\"",
    "build:renderer": "vite build",
    "build:electron": "tsc",
    "build": "npm run build:renderer && npm run build:electron",
    "start": "electron ."
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "lucide-react": "^0.554.0",
    "node-fetch": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^20.19.25",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^31.2.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.6.3",
    "vite": "^5.0.11",
    "wait-on": "^7.0.2"
  }
}
